package rkm;
import java.util.Scanner;


public class mmp {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
	    System.out.println("1.decimal no:,\n2.hexadeciml:\n3.octal\n4.exit");


	    int num;
	    do {
	    	System.out.println("/nentr your case:");
	    	num=sc.nextInt();
	    	switch(num) {


	    case 1:
	       int a=20;
	       System.out.printf("decimal number");
	       a=sc.nextInt();
	       System.out.printf("decimal=%d",a);
	     break;

	    case 2:
	        int b=30;
	     System.out.printf("octoal number");
	     b=sc.nextInt();
	        System.out.printf("octolno=%o",b);
	       break;

	    case 3:
	      int c=40;
	      System.out.printf("hexa decimal number");
	      c=sc.nextInt();
	      System.out.printf("hexa decimal no=%x",c);
	    break;


	    case 4:
	    	System.exit(0);
	    	default:
		   System.out.println("enter correct choice");
	    }

	    }while(num!=4);
	
	



	}

}
